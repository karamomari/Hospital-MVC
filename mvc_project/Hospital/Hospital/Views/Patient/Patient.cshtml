@model IEnumerable<Hospital.Models.Patient>

@{
    Layout = "";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/Doctor/css.css">
    <link rel="stylesheet" href="~/Doctor/bootstrapcss/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">

    <title>Document</title>
</head>
<body>
    <span class="pageload">


        <header>
            <nav class="navcss navbar navbar-expand-lg bg-dark navbar-inverse">

                <div class="navbar-brand col-9">
                    <a class="m-3 text-decoration-none text-success" href="">
                        <img src="~/imge_treatment_plans/R.jpeg" alt="Avatar Logo" style="width:40px;" class="rounded-pill">
                    </a>

                </div>
                <button class="navbar-toggler bg-success" type="button" data-toggle="collapse" data-target="#navbat">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbat">
                    <ul class="navbar-nav ">



                       


                    </ul>

                </div>
            </nav>
        </header>


        <main>








            <section id="homepage" class="col-12 row-2">

                <div class="col-12">
                    <div class="card col-lg-12 custom-col bg-transparent ">
                        <div class="card-body">
                            <h1 class="display-5">Hello  @Model.FirstOrDefault().Fname @Model.FirstOrDefault().Lname   </h1>
                            <p class="lead">
                               
                               
                                <br>Your id number @Model.FirstOrDefault().PatId
                               
                            </p>
                        </div>
                    </div>
                </div>
            </section>







            <div class="container-fluid row">

                <form asp-action="viewrecord_topa">
                    <div class="card" style="width: 18rem;">
                        <img src="~/Doctor/img/records.jpg" class="card-img-top" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">View records</h5>
                            <p class="card-text">
                       


                            </p>
                            <input type="submit" value="View" />

                        </div>

                    </div>
                </form>



                <form asp-action="viewappo">

                    <div class="card" style="width: 18rem;">
                        <img src="~/Doctor/img/download.jpg" class="card-img-top" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Schedule appointments</h5>
                            <p class="card-text">
                          

                            </p>
                            <input type="submit" value="View" />

                        </div>
                    </div>
                </form>










                <form asp-action="Communicate">
                    <div class="card" style="width: 18rem;">
                        <img src="~/imge_treatment_plans/coum.jpg" class="card-img-top" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">healthcare providers</h5>
                            <p class="card-text">

                             

                            </p>
                            <input type="submit" value="Communicate" />

                        </div>

                    </div>
                </form>

            </div>








        </main>
    </span>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" defer></script>
</body>
</html>